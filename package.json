{
  "name": "commercial-policies-engine",
  "private": true,
  "workspaces": [
    "packages/frontend",
    "packages/backend"
  ],
  "scripts": {
    "nuxt:dev": "yarn workspace frontend dev",
    "exp:dev": "yarn workspace backend start",
    "start:docker": "docker compose up -d",
    "stop:docker": "docker compose down",
    "sh:docker": "sudo docker run -it -v $(pwd):/app node:19-alpine /bin/sh",
    "prepare": "husky install",
    "test": "jest --passWithNoTests --runInBand --no-cache --silent"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --fix",
    "*.**": "prettier --check --ignore-unknown",
    "*.{vue,js,ts}": "yarn test --findRelatedTests"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-nuxt": "^4.0.0",
    "eslint-plugin-vue": "^9.9.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4"
  },
  "dependencies": {}
}
